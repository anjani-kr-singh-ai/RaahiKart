<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <!-- Logo Container -->
        <FrameLayout
            android:id="@+id/logo_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <!-- Logo Image -->
            <ImageView
                android:id="@+id/raahikart_logo"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:src="@drawable/raahikart_logo"
                android:contentDescription="@string/app_logo" />
        </FrameLayout>

        <!-- Custom Progress Bar Container - Reduced margin from 60dp to 20dp -->
        <LinearLayout
            android:id="@+id/progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_container"
            android:layout_marginTop="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <!-- Custom Progress Bar -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/progress_background"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#E0E0E0"
                    android:radius="3dp" />

                <View
                    android:id="@+id/progress_fill"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:background="@drawable/progress_fill_drawable" />
            </FrameLayout>

            <!-- Progress Text -->
            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"
                android:textSize="12sp"
                android:textColor="#000000"
                android:text="0%" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>